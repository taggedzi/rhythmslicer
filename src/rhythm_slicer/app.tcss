Screen {
    layout: vertical;
    border: round $accent;
}

#header {
    height: 1;
    content-align: left middle;
}

#main {
    layout: horizontal;
    height: 1fr;
    width: 100%;
}

#playlist_list {
    width: 35;
    min-width: 24;
    height: 1fr;
    border: round $secondary;
    background: $panel;
    padding: 0 0 0 1;
    overflow-y: auto;
    content-align: left top;
    text-wrap: nowrap;
}

#visualizer {
    height: 1fr;
    width: 1fr;
    border: round $primary;
    content-align: center middle;
}

#status {
    height: 1;
    width: 100%;
    content-align: left middle;
    text-wrap: nowrap;
    text-overflow: ellipsis;
}

#progress {
    height: 1;
    width: 100%;
    content-align: left middle;
    text-wrap: nowrap;
}

PlaylistPrompt {
    align: center middle;
}

#playlist_prompt {
    layout: vertical;
    width: 60%;
    max-width: 80;
    min-width: 40;
    padding: 1 2;
    border: round $accent;
    background: $panel;
}

#prompt_title {
    width: 100%;
    content-align: left middle;
    margin-bottom: 1;
}

#prompt_input {
    width: 100%;
    margin-bottom: 1;
}

#prompt_hint {
    width: 100%;
    content-align: left middle;
    margin-bottom: 1;
}

#prompt_buttons {
    width: 100%;
    height: 3;
    margin-top: 1;
    align: right middle;
}

#prompt_absolute {
    width: 100%;
    height: 3;
    padding: 0 1;
    content-align: left middle;
    margin-bottom: 1;
}

#prompt_recursive {
    width: 100%;
    height: 3;
    padding: 0 1;
    content-align: left middle;
    margin-bottom: 1;
}
